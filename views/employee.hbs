<div class="row">
    <div class="col-md-12">
        <h1>{{viewData.data.firstName}} {{viewData.data.last_name}} - Employee: {{viewData.data.employeeNum}}</h1>
        <form method="post" action="/employee/update">
            <input type="hidden" name="employeeNum" value="{{viewData.data.employeeNum}}" />
            <fieldset>
            <legend>Personal Information</legend>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="firstName">First Name:</label>
                        <input class="form-control" id="firstName" name="firstName" type="text" value="{{viewData.data.firstName}}" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="last_name">Last Name:</label>
                        <input class="form-control" id="last_name" name="last_name" type="text" value="{{viewData.data.last_name}}" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input class="form-control" id="email" name="email" type="email" value="{{viewData.data.email}}" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="SSN">Social Security Number</label>
                        <input class="form-control" id="SSN" name="SSN" type="text" value="{{viewData.data.SSN}}" readonly />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="addressStreet">Address(Street)</label>
                        <input class="form-control" id="addressStreet" name="addressStreet" type="text" value="{{viewData.data.addressStreet}}"/>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="addressCity">Address(City)</label>
                        <input class="form-control" id="addressCity" name="addressCity" type="text" value="{{viewData.data.addresCity}}"/>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="addressState">Address(State)</label>
                        <input class="form-control" id="addressState" name="addressState" type="text" value="{{viewData.data.addressState}}"/>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="addressPostal">Address(Zip Code)</label>
                        <input class="form-control" id="addressPostal" name="addressPostal" type="text" value="{{viewData.data.addressPostal}}"/>
                    </div>
                </div>
            </div>
            <legend>Company Information</legend>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="isManager">Manager</label>
                        {{#if data.isManager}}
                        <input class="form-control" id="isManager" name="isManager" type="checkbox" checked/>
                        {{else}}
                        <input class="form-control" id="isManager" name="isManager" type="checkbox"/>
                        {{/if}}
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="employeeManagerNum">Employee's Manager Number</label>
                        <input class="form-control" id="employeeManagerNum" name="employeeManagerNum" type="text" value="{{viewData.data.employeeManagerNum}}"/>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="status">Status</label> <br />
                        <label class="checkbox-inline">
                            <input id="status" name="status" type="radio" value="Full Time" {{#equal viewData.data.status "Full Time"}} checked {{/equal}}> Full Time  
                        </label>
                        <label class="checkbox-inline">
                            <input id="status" name="status" type="radio" value="Part Time" {{#equal viewData.data.status "Part Time"}} checked {{/equal}}> Part Time
                        </label>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="addressPostal">Department</label>
                        {{#if viewData.departments}}
                        <select class="form-control" name="department" id="department">
                        {{#each viewData.departments}}
                        <option value="{{departmentId}}" {{#if selected}} selected {{/if}} >{{departmentName}} </option>
                        {{/each}}
                        </select>
                        {{else}}
                         <div>No Departments</div>
                        {{/if}}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label for="hireDate">Hire Date</label>
                        <input type="text" class="form-control" name="hireDate" value="{{data.hireDate}}" readonly/>
                    </div>
                </div>
            </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary pull-right" value="Update Employee" /><br /><br /><br />
        </form>
    </div>
</div>