{{#each data}}
<div class="row">
 <div class="col-md-12">
     <h4>{{subject}}</h4>
 <div class="well">
 <div class="row">
 <div class="col-md-12">
 {{commentText}}<br /><br />
 Posted on: {{postedDate}} by <a href="mailto:{{authorEmail}}">{{authorName}}</a>
 </div>
 </div>
 {{#each replies}}
 <br />
 <div class="row">
 <div class="col-md-12">
 <div class="well">{{commentText}} <br /> <br />
